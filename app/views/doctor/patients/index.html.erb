<div class="mt-6 min-h-screen">
    <h1 class="text-3xl font-semibold text-center text-gray-800 mb-6">Registered Patients List</h1>
    <% if @patients.any? %>
        <table class="min-w-full bg-white shadow-lg">
            <thead>
                <tr class="border-b">
                    <th class="py-2 px-4 text-left text-gray-600">First Name</th>
                    <th class="py-2 px-4 text-left text-gray-600">Last Name</th>
                    <th class="py-2 px-4 text-left text-gray-600">Date of Birth</th>
                    <th class="py-2 px-4 text-left text-gray-600">Email</th>
                    <th class="py-2 px-4 text-left text-gray-600">Phone</th>
                </tr>
            </thead>
        <tbody>
            <% @patients.each do |patient| %>
                <%= link_to receptionist_patients_path(patient), class: "block hover:bg-gray-100" do %>
                    <tr class="border-b hover:bg-gray-100">
                        <td class="py-2 px-4 text-gray-800"><%= patient.first_name %></th>
                        <td class="py-2 px-4 text-gray-800"><%= patient.last_name %></td>
                        <td class="py-2 px-4 text-gray-800"><%= patient.dob %></td>
                        <td class="py-2 px-4 text-gray-800"><%= patient.email %></td>
                        <td class="py-2 px-4 text-gray-800"><%= patient.phone %></td>
                    </tr>
                <% end %>
            <% end %>
        </tbody>
        </table>
    <% else %>
        <p>No patients found.</p>
    <% end %>
    
    <div class="mt-6">
       <%= link_to 'Back to Dashboard', root_path, class: 'hover:text-blue-400 text-blue-600 flex justify-center' %>
    </div>
</div>